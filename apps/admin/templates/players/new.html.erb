<h2>Add player</h2>

<% unless params.valid? %>
  <div class="errors">
    <h3>There was a problem with your submission</h3>
    <ul>
      <% params.error_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%=
  form_for :player, routes.players_path do
    div class: 'input' do
      label      :first_name
      text_field :first_name
    end

    div class: 'input' do
      label      :last_name
      text_field :last_name
    end

    div class: 'input' do
      label      :email
      text_field :email
    end

    div class: 'controls' do
      submit 'Create'
    end
  end
%>
